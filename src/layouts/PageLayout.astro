---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Web Story Platform</title>
	</head>
	<body class="bg-zinc-50 text-zinc-900 min-h-screen flex flex-col font-sans">
		<header class="bg-white border-b border-zinc-200 py-6">
			<div class="max-w-4xl mx-auto px-6 flex justify-between items-center">
				<a href="/" class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
					Web Story Platform
				</a>
				<nav class="flex gap-6 text-sm font-medium text-zinc-500">
					<a href="/" class="hover:text-zinc-900 transition-colors">Home</a>
					<a href="/about" class="hover:text-zinc-900 transition-colors">About</a>
				</nav>
			</div>
		</header>

		<main class="flex-grow max-w-4xl mx-auto px-6 py-12 w-full">
			<slot />
		</main>

		<footer class="bg-white border-t border-zinc-200 py-12">
			<div class="max-w-4xl mx-auto px-6 text-center">
				<p class="text-sm text-zinc-500 mb-6">
					&copy; {new Date().getFullYear()} Web Story Platform. All rights reserved.
				</p>
				<div class="flex flex-wrap justify-center gap-6 text-xs font-semibold text-zinc-400 uppercase tracking-widest">
					<a href="/privacy" class="hover:text-zinc-900 transition-colors">Privacy Policy</a>
					<a href="/terms" class="hover:text-zinc-900 transition-colors">Terms of Service</a>
					<a href="/disclosure" class="hover:text-zinc-900 transition-colors">Affiliate Disclosure</a>
					<a href="/about" class="hover:text-zinc-900 transition-colors">Contact Us</a>
				</div>
			</div>
		</footer>
		<Analytics />
	</body>
</html>
